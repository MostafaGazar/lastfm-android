<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_tile_bg" >

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    
    <ListView
        android:id="@+id/profile_friends_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:divider="#d9d7d7"
        android:listSelector="#00000000"
        tools:listitem="@layout/list_item_profile_friend"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone" />
    	<!-- 
        android:overScrollHeader="@color/transparent_lastfm"
        android:overScrollFooter="@color/transparent_lastfm"
         -->

</RelativeLayout>